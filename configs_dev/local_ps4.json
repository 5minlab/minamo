{
  "unityPath": "C:\\Program Files\\Unity 2017.3.0f3",
  "projectPath": "./UnityProject_Minamo",

  "buildBasePath": "./output",
  "buildPath": "{{.ConfigName}}-{{.Year}}-{{.Month}}-{{.Day}}-{{.Platform}}",

  "method": "Assets.Minamo.Editor.EntryPoint.Build",

  "build": {
    "targetGroup": "ps4",
    "target": "ps4",

    "options": {
      "development": true
    }
  },

  "defines": [
    "HELLO_WORLD",
    "PLATFORM_PS4"
  ],

  "xr": {
    "enabled": true,
    "devices": [
      "PlayStationVR"
    ],
    "stereoRenderingPath": "single-pass"
  },
  
  "editorUserBuild": {
    "ps4BuildSubtarget": "PCHosted",
    "ps4HardwareTarget": "NeoAndBase"
  },

  "scripting": {
    "backend": "Mono2X",
    "scriptingRuntimeVersion": "legacy",
    "apiCompatibilityLevel": "NET_2_0"
  }
}
