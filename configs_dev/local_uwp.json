{
  "unityPath": "C:\\Program Files\\Unity 2017.2.0f3",
  "projectPath": "./UnityProject_Minamo",

  "buildBasePath": "./output",
  "buildPath": "{{.ConfigName}}-{{.Year}}-{{.Month}}-{{.Day}}-{{.Platform}}/{{.ShortRevision}}.exe",

  "method": "Assets.Minamo.Editor.EntryPoint.Build",

  "build": {
    "targetGroup": "wsa",
    "target": "wsa",

    "options": {
      "development": true,
      "allowDebugging": true
    }
  },

  "defines": [
    "HELLO_WORLD",
    "PLATFORM_UWP"
  ],

  "xr": {
    "enabled": true,
    "devices": [
      "WindowsMR"
    ],
    "stereoRenderingPath": "instancing"
  },

  "identification": {
    "packageName": "com.fiveminlab.minamo.localdev",
    "versionName": "0.0.1",
    "versionCode": 1
  },

  "androidSdk": {
    "min": 24,
    "target": 0
  },

  "keystore": {
    "keystoreName": "",
    "keystorePass": "",
    "keyaliasName": "",
    "keyaliasPass": ""
  },

  "publishing": {
    "useApkExpansion": true,
    "uwpCapability": [
      "SpatialPerception",
      "WebCam"
    ]
  },
  
  "scripting": {
    "backend": "Mono2x",
    "scriptingRuntimeVersion": "latest",
    "apiCompatibilityLevel": "NET_4_6"
  },

  "editorUserBuild": {
    "wsaGenerateReferenceProjects": false
  },
  
  "resolutionAndPresentation": {
    "runInBackground": false
  }
}
