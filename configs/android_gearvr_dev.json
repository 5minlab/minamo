{
  "unityPath": "/Applications/Unity/Unity.app",
  "projectPath": "./UnityProject_Minamo",

  "buildBasePath": "./output",
  "buildPath": "{{.ConfigName}}-{{.Year}}-{{.Month}}-{{.Day}}-{{.ShortRevision}}.apk",

  "method": "Assets.Minamo.Editor.EntryPoint.Build",

  "build": {
    "targetGroup": "android",
    "target": "android",

    "options": {
      "development": true,
      "allowDebugging": true
    }
  },

  "identification": {
    "packageName": "com.fiveminlab.minamo.gearvr",
    "versionName": "0.0.1",
    "versionCode": 1
  },
  
  "resolutionAndPresentation": {
    "runInBackground": true
  },

  "xr": {
    "enabled": true,
    "devices": [
      "Oculus"
    ],
    "stereoRenderingPath": "single-pass"
  },

  "androidSdk": {
    "min": 19,
    "target": 0
  },

  "keystore": {
    "keystoreName": "",
    "keystorePass": "",
    "keyaliasName": "",
    "keyaliasPass": ""
  }
}
